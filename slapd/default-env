CONTAINER_SERVICE_DIR=${CONTAINER_SERVICE_DIR:-"/container/service"}
OPENLDAP_SLAPD_CONFIG_DIR=${OPENLDAP_SLAPD_CONFIG_DIR:-"/etc/openldap/slapd.d"}
SCHEMA_DIR=${SCHEMA_DIR:-"/etc/openldap/schema"}

LDAP_LOG_LEVEL=${LDAP_LOG_LEVEL:-256}
LDAP_DOMAIN=${LDAP_DOMAIN:-"mydomain.com"}
LDAP_ADMIN_PASSWORD=${LDAP_ADMIN_PASSWORD:-"admin"}
LDAP_CONFIG_PASSWORD=${LDAP_CONFIG_PASSWORD:-"config"}
LDAP_BACKEND=${LDAP_BACKEND:-"hdb"}
LDAP_REMOVE_CONFIG_AFTER_SETUP=${LDAP_REMOVE_CONFIG_AFTER_SETUP-"true"}
IMPORT_ALL_BASE_SCHEMA=${IMPORT_ALL_BASE_SCHEMA:-"false"}
IMPORT_BASE_SCHEMA_LIST=${IMPORT_BASE_SCHEMA_LIST:-"ppolicy cosine inetorgperson misc nis openldap"}

LDAP_ORGANISATION=${LDAP_ORGANISATION:-"Example Inc."}

LDAP_TLS=${LDAP_TLS:-"true"}
LDAP_TLS_CIPHER_SUITE=${LDAP_TLS_CIPHER_SUITE:-"ECDHE-RSA-AES256-SHA384:AES256-SHA256:!RC4:HIGH:!MD5:!aNULL:!EDH:!EXP:!SSLV2:!eNULL"}
LDAP_TLS_CRT_FILENAME=${LDAP_TLS_CRT_FILENAME:-"ldap.pem"}
LDAP_TLS_KEY_FILENAME=${LDAP_TLS_KEY_FILENAME:-"ldap-key.pem"}
LDAP_TLS_CA_CRT_FILENAME=${LDAP_TLS_CA_CRT_FILENAME:-"ca.pem"}
LDAP_TLS_CA_KEY_FILENAME=${LDAP_TLS_CA_KEY_FILENAME:-"ca-key.pem"}
LDAP_TLS_ENFORCE=${LDAP_TLS_ENFORCE:-"false"}
LDAP_TLS_VERIFY_CLIENT=${LDAP_TLS_VERIFY_CLIENT:-"demand"}

LDAP_REPLICATION=${LDAP_REPLICATION:-"false"}
LDAP_REPLICATION_CONFIG_SYNCPROV=${LDAP_REPLICATION_CONFIG_SYNCPROV:-'binddn=\"cn=admin,cn=config\" bindmethod=simple credentials=\"\$LDAP_CONFIG_PASSWORD\" searchbase=\"cn=config\" type=refreshAndPersist retry=\"60 +\" timeout=1 starttls=critical'}

LDAP_REPLICATION_DB_SYNCPROV=${LDAP_REPLICATION_DB_SYNCPROV:-'binddn=\"cn=admin,\$LDAP_BASE_DN\" bindmethod=simple credentials=\"\$LDAP_ADMIN_PASSWORD\" searchbase=\"\$LDAP_BASE_DN\" type=refreshAndPersist interval=00:00:00:10 retry=\"60 +\" timeout=1 starttls=critical'}

LDAP_REPLICATION_HOSTS=${LDAP_REPLICATION_HOSTS:-"ldap://ldap.example.org ldap://ldap2.example.org"}
